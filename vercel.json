{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/time-blocks(.*)",
      "dest": "/api/time-blocks.js"
    },
    {
      "src": "/api/playlists(.*)",
      "dest": "/api/playlists.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "api/health.js": {
      "maxDuration": 10
    },
    "api/time-blocks.js": {
      "maxDuration": 15
    },
    "api/playlists.js": {
      "maxDuration": 15
    }
  }
}
